<!--The main page layout-->
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<!--    Food delivery layout-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#F87400"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:text="Food Delivery"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#F87400"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="200dp"
            android:layout_height="30dp"/>
    </LinearLayout>
<!--    End of food delivery layout-->
    <EditText
        android:textColor="#aabbcc"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:text="Search for dishes or restaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Featured Dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!--    The horizontal scrolling layout for 5 images of food-->
    <HorizontalScrollView android:layout_width="match_parent"
        android:layout_height="140dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/burgur2"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/pizza"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/salad"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/dosa"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/biriyani"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
        </LinearLayout>
    </HorizontalScrollView>
<!--    This marks the end of the horizontal scroll-->
<!--    This next one is a horizontal layout of buttons -->
<!--            (pizza,Burgers,Salads)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <Button
            android:text="Pizza"
            android:backgroundTint="#F87400"
            android:textSize="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <Button
            android:text="Burgers"
            android:backgroundTint="#F87400"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
        <Button
            android:text="Salads"
            android:backgroundTint="#F87400"
            android:textSize="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="90dp"
            android:layout_height="40dp"/>
    </LinearLayout>
<!--    End of layout of buttons-->
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Popular Dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<!--    This next one is a scrollview of 5 images of food-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/burgur2"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/pizza"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/salad"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/dosa"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/biriyani"
                android:layout_width="300dp"
                android:layout_height="200dp"/>
        </LinearLayout>
    </ScrollView>
<!--    End of scrollview-->
</LinearLayout>
<!--End of main layout-->